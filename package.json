{
    "name": "vscode-gcode-syntax",
    "displayName": "G-Code Syntax",
    "description": "CNC G-Code Syntax Langauge",
    "version": "0.2.0",
    "license": "MIT",
    "publisher": "appliedengdesign",
    "author": {
        "name": "Mike Centola",
        "url": "https://mikecentola.com"
    },
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#666666",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/appliedengdesign/vscode-gcode-syntax.git"
    },
    "homepage": "https://github.com/appliedengdesign/vscode-gcode-syntax",
    "bugs": {
        "url": "https://github.com/appliedengdesign/vscode-gcode-syntax/issues"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:gcode"
    ],
    "contributes": {
        "languages": [
            {
                "id": "gcode",
                "aliases": [
                    "gcode",
                    "GCODE",
                    "nc",
                    "syntax",
                    "highlighter",
                    "language"
                ],
                "extensions": [
                    ".m",
                    ".apt",
                    ".nc",
                    ".cnc",
                    ".ncc",
                    ".ecs",
                    ".tap",
                    ".fnc",
                    ".ncg",
                    ".gc",
                    ".fan",
                    ".fgc",
                    ".din",
                    ".xpi",
                    ".hnc",
                    ".ncp",
                    ".min",
                    ".gcd",
                    ".rol",
                    ".mpr",
                    ".ply",
                    ".out",
                    ".eia",
                    ".plt",
                    ".sbp",
                    ".mpf",
                    ".gcode",
                    ".g00",
                    ".cls",
                    ".dnc",
                    ".knc"
                ],
                "configuration": "./language/gcode-language.json"
            }
        ],
        "grammars": [
            {
                "language": "gcode",
                "scopeName": "source.gcode",
                "path": "./syntaxes/gcode.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "gcode",
                "path": "./snippets/gcode-snippets.json"
            },
            {
                "language": "gcode",
                "path": "./snippets/mcode-snippets.json"
            },
            {
                "language": "gcode",
                "path": "./snippets/general-snippets.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "G-Code",
            "properties": {
                "gcode.colorization": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable G-Code specific colorization options",
                    "scope": "window"
                },
                "gcode.machineType": {
                    "type": "string",
                    "default": "Mill",
                    "enum": [
                        "Mill",
                        "Lathe"
                    ],
                    "enumDescriptions": [
                        "Loads specific snippets for CNC Mill G-Code",
                        "Loads specific snippets for CNC Lathe G-Code"
                    ],
                    "scope": "window"
                },
                "gcode.treeAutoRefresh": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable G-Code Tree Auto Refresh",
                    "scope": "window"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "gcode",
                    "title": "G-Code",
                    "icon": "images/vscode-gcode-syntax-icon.svg"
                }
            ]
        },
        "views": {
            "gcode": [
                {
                    "id": "gcodeTree",
                    "name": "G-Code Tree",
                    "when": "gcodeTreeEnabled"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "gcodeTree.refreshEntry",
                    "when": "view == gcodeTree",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "gcodeTree.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/icons/light/refresh.svg",
                    "dark": "resources/icons/dark/refresh.svg"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.12.22",
        "@types/vscode": "^1.41.0",
        "glob": "^7.1.6",
        "mocha": "^6.2.2",
        "tslint": "^5.20.0",
        "typescript": "^3.7.4",
        "vscode-test": "^1.2.2"
    }
}
